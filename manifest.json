{
  "manifest_version": 2,
  "name": "Days Until",
  "version": "1.0",
  "description": "Displays the number of days until a specified date right in the toolbar.",
  "permissions": ["storage"],
  "browser_action": {
    "default_title": "Days until",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "120": "icon.png"
  }
}
